n = int(input("Ingrese un número entero: "))
suma_impares = 0
contador_impares = 0
numero = 1

while numero <= n:
    if numero % 2 != 0:
        suma_impares += numero
        contador_impares += 1
    numero += 1

print("La suma de los números impares desde 1 hasta", n, "es:", suma_impares)
print("Cantidad de números impares en el rango:", contador_impares)
